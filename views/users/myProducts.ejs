<%- include("../partials/head", {pageTitle: "Ingresar" , stylesheet: "products.css" }) %>


  <%- include("../partials/header", {logueado: true, tipo: 2}) %>
    <!--comenzar a codear-->
    <div class="contenedor">
      <% products.forEach(product=> { %>

        <div class="product">
          <h2>
            <%=product.name %>
          </h2><br>
          <img src="/images/<%= product.image %> " alt="">
          <div class="info-podruct">

            <div class="descrition">
              <%=product.description%>
            </div>
            <div class="price">$<%= product.price %>
            </div>

            <form action="/users/myProducts/<%= product.id%>?_method=DELETE" method="POST">
              <button>BORRAR PRODUCTO</button>
            </form>
            <br>

            <a href="/users/editMyProduct/<%= product.id%>"><button>Editar producto</button></a>

          </div>
        </div>
        <% }) %>
    </div>





    <!--finalizar-->
    <%- include("../partials/footer") %>